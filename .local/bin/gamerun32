#!/bin/bash
# Usage: set this script as the Steam launch option, e.g. "gamerun32 %command%"
# It runs the game with gamemoderun, MangoHud, and Steam overlay

DISPLAY_SERVER="x11"
OVERLAY_SO="$HOME/.local/share/Steam/ubuntu12_32/gameoverlayrenderer.so"
GAMEMODE_SO="/usr/lib32/libgamemode.so"

exec gamemoderun mangohud \
  env SDL_VIDEODRIVER="$DISPLAY_SERVER" LD_PRELOAD="$OVERLAY_SO:$GAMEMODE_SO" "$@"
